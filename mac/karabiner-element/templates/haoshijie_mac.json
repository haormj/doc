{
    "title": "this is haoshijie mac config",
    "rules": [
        {
            "description": "some application use ctrl to replace command",
            "manipulators": [
                {{- range $value := splitList "" $.letter}}
                 {
                    "from": {
                        "key_code": "{{$value}}",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "{{$value}}",
                            "modifiers": "command"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.google\\.Chrome"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {{- end}}
                {}
            ]
        },
        {
            "description": "switch application",
            "manipulators": [
                {
                    "from": {
                        "key_code": "tab",
                        "modifiers": {
                            "mandatory": [
                                "option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "tab",
                            "modifiers": "command"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Maps command-j to left desktop switch, command-k to right desktop switch",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow",
                            "modifiers": "left_control"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow",
                            "modifiers": "left_control"
                        }
                    ]
                }
            ]
        },
        {
            "description": "Open a terminal window with RCtrl-RAlt-T",
            "manipulators": [
                {
                    "from": {
                        "key_code": "t",
                        "modifiers": {
                            "mandatory": [
                                "right_control",
                                "right_option"
                            ],
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "shell_command": "open -a Terminal ~"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "close terminal window with ctrl + d",
            "manipulators": [
                {
                    "from": {
                        "key_code": "d",
                        "modifiers": {
                            "mandatory": [
                                "control"
                            ],
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "w",
                            "modifiers": "command"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^com\\.apple\\.Terminal$"
                            ]
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}